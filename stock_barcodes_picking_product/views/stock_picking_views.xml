<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_picking_form" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock_barcodes.view_picking_form"/>
        <field name="arch" type="xml">
            <button name="action_barcode_scan" position="replace">
                <button name="action_barcode_scan_manu"
                    class="oe_stat_button"
                    icon="fa-barcode"
                    type="object"
                    help="Start barcode interface"
                    >
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_text">Scan barcodes (new)</span>
                    </div>
                </button>
            </button>
        </field>
    </record>

</odoo>
